# Vercel Environment Variables
# Copy this file and set these variables in your Vercel dashboard

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cryptowallet?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# Encryption Key (32 characters exactly)
ENCRYPTION_KEY=your32characterencryptionkeyhere!!

# Node Environment
NODE_ENV=production

# Client URL (your Vercel frontend domain)
CLIENT_URL=https://your-app.vercel.app

# Email Configuration (optional for transactional emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# API Configuration
API_BASE_URL=https://your-app.vercel.app/api

# Security Keys (generate random strings)
SESSION_SECRET=your-session-secret-key-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-app.vercel.app,https://your-app-git-main.vercel.app

# Database Options
DB_MAX_POOL_SIZE=10
DB_BUFFER_MAX_ENTRIES=0

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_REAL_BLOCKCHAIN=false

# Blockchain Configuration (for production use)
BITCOIN_NETWORK=mainnet
ETHEREUM_NETWORK=mainnet
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key

# Exchange API Keys (optional)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret