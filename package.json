{
  "name": "crypto-wallet-app",
  "version": "1.0.0",
  "description": "PayPal-like crypto payment application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && nodemon index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:vercel": "cd client && npm install && npm run build",
    "start": "cd server && npm start",
    "start:vercel": "node api/index.js",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "vercel:deploy": "vercel --prod",
    "vercel:dev": "vercel dev",
    "lint": "cd client && npm run lint",
    "type-check": "cd client && npm run type-check"
  },
  "keywords": [
    "crypto",
    "wallet",
    "payment",
    "blockchain",
    "bitcoin",
    "ethereum"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vercel": "latest"
  },
  "dependencies": {},
  "engines": {
    "node": "20.x",
    "npm": ">=8.0.0"
  }
}