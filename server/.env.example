# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crypto-wallet

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Crypto API Keys (Get from respective providers)
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=bitcoinuser
BITCOIN_RPC_PASSWORD=bitcoinpassword

ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_TESTNET_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# External API Keys
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
BLOCKCHAIN_INFO_API_KEY=your-blockchain-info-api-key

# Email Configuration (for notifications and 2FA)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Two-Factor Authentication
TWO_FACTOR_SERVICE_NAME=CryptoWallet

# Client URL
CLIENT_URL=http://localhost:3000