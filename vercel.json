{
  "version": 2,
  "public": true,
  "installCommand": "npm run install:all",
  "builds": [
    { "src": "client/next.config.ts", "use": "@vercel/next" },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "/api/index.js" },
    { "src": "/api/wallets/(.*)", "dest": "/api/index.js" },
    { "src": "/api/exchanges/(.*)", "dest": "/api/index.js" },
    { "src": "/api/transactions/(.*)", "dest": "/api/index.js" },
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ],
  "github": {
    "enabled": false
  }
}