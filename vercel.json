{
  "version": 2,
  "public": true,
  "installCommand": "npm run install:all",
  "builds": [
    { "src": "client", "use": "@vercel/next" },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "client/$1" }
  ],
  "github": {
    "enabled": false
  }
}